@section PageScripts{
    <script type="text/javascript">

        function deleteVtu(e) {
            swal({
                title: 'Bạn có chắc chắn muốn xóa ?',
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Accept',
                cancelButtonText: 'Cancel',
            }).then((result) => {
                if (result.value) {
                    var id = "Page_" + e;
                    var button = $("#" + id);
                    button.click();
                }
            })
        };
        function DeleteSelect() {
            var selectedIds = new Array();
               $('#areas-list input[type="checkbox"]:checked').each(function () {
                selectedIds.push($(this).attr('value'));
            });
              swal({
                title: 'Bạn có chắc chắn muốn xóa ?',
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Accept',
                cancelButtonText: 'Cancel',
              }).then((result) => {
                  if (result.value) {
                       $.ajax({
                        cache: false,
                        type: "POST",
                        url: "@Html.Raw(Url.Action("DeleteSelected"))",
                        data: { ids: selectedIds },
                           complete: function (data) {
                              $("#loadmesenger").load('@(Url.Action("_MessagePartial"))');
                               $('#point-form').submit();
                        },
                        error: function (xhr, ajaxOptions, thrownError) {
                            console.log(thrownError);
                        },
                        traditional: true
            });
                  }
              })
        };
        var runSelect2 = function () {
            $(".search-select").select2({
                placeholder: "Choose something",
                allowClear: true
            });
        };
        function LoadSite(areaId) {
             $.ajax({
                    type: "GET",
                    url: '/Data/GetListSiteByAreaID',
                    data: { areaId: areaId },
                    contentType: "application/json; charset=utf-8",
                    dataType: "html",
                    success: function (resuilt) {
                        $("#lstSite").html(resuilt);
                    },
                    error: function () {
                    }
              });
        }
        runSelect2();
        function submitform() {
            $("#btn_Submit").click();
        };
        function submitValue(value) {
            $("#pageSize").val(value);
            submitform();
        };
    </script>
    <script type="text/javascript">
        //https://eonasdan.github.io/bootstrap-datetimepicker/#date-only
        $(function () {
            $('.datetimepicker').datetimepicker({
                format: 'DD/MM/YYYY',
                locale: 'vi',
            });
        });
    </script>
}
